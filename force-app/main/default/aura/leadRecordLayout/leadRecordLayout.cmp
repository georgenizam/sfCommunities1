<aura:component implements="forceCommunity:availableForAllPageTypes" access="global">
  <aura:attribute name="recordId" type="String" default="00Q2w000004oGkyEAE" />
  <lightning:recordViewForm recordId="{!v.recordId}" objectApiName="Lead">
        <div class="slds-box slds-text-heading_medium">
            Fields for {!v.recordId}
        </div>
        <div class="slds-grid slds-grid_align-space slds-box">
            <div class="slds-col slds-size_4-of-12 slds-p-horizontal_medium">                
                <lightning:outputField fieldName="Name" />
            </div>
            <div class="slds-col slds-size_8-of-12 slds-p-horizontal_medium">
                <div class="slds-box">
                    <div class="slds-text-heading_small">Rich text will be escaped if security library not in scope</div>
                    <hr></hr>
                    <!-- <lightning:outputField fieldName="Rich_Description__c" /> -->
                </div>
            </div>
        </div>
  </lightning:recordViewForm>
</aura:component>	
