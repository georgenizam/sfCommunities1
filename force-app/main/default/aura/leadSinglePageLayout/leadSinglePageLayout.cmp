<aura:component implements="forceCommunity:layout, force:hasRecordId" description="Custom Content Layout" access="global">
  <aura:attribute name="menu" type="Aura.Component[]" required="false"></aura:attribute>
  <aura:attribute name="basicInfo" type="Aura.Component[]" required="false"></aura:attribute>
  <aura:attribute name="column1" type="Aura.Component[]" required="false"></aura:attribute>
  <aura:attribute name="column2" type="Aura.Component[]" required="false"></aura:attribute>  
   
  <section>
    <div class="slds-grid slds-grid_vertical slds-gutters">      
      <div class="slds-col slds-m-bottom_medium slds-size_1-of-1">
        {!v.basicInfo}
      </div>
      <div class="slds-grid slds-col slds-gutters">
        <div class="slds-col slds-size_2-of-3">
          {!v.column1}
        </div>
        <div class="slds-col slds-size_1-of-3">
          {!v.column2}
        </div>
      </div>
      
    </div>    
  </section>
</aura:component>